
<div class="log-in">
  <div class="row">
    <div class="col-sm-12">

      <h1>Log In</h1>
      <p id="alert"><%= alert %></p>
      <%= form_tag logout_path do %>
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email] %>
        </div>
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <div class="actions"><%= submit_tag "Log In", { :class=>"btn btn-default navbar-btn" }  %></div>
      <% end %>

    </div>
  </div>
</div>

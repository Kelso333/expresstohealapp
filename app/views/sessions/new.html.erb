
<h1 class="log-in">Log In</h1>
  <p id="alert"><%= alert %></p>
    <%= form_tag login_path do %>
      <div class="field">
        <%= label_tag :username %>
        <%= text_field_tag :username, params[:username] %>
      </div>
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
          <div class="actions"><%= submit_tag "Log In", { :class=>"btn btn-default navbar-btn" }  %></div>
    <% end %>



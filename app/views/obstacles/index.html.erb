<br>
  <div class="new-obstacle">
    <%= link_to 'New Obstacle', "obstacles/new", { :class=>"btn btn-default navbar-btn" } %>
  </div>

    <div class="obstacle-header">
      <h1>Express Yourself</h1>
    </div>
        <div class="obstacles">
          <div class="container">
            <% @obstacles.each do |obstacle| %>
              <div class="obstacle">
                <p class="content main-obstacles">
                  <div class="container">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h5> <%= obstacle.person.username %> </h5>
                          <% if current_peep == obstacle.person %>
                            <%= link_to "edit", edit_obstacle_path(obstacle), class: "btn btn-info btn-xs" %>
                            <%= link_to "delete", obstacle, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs" %>
                          <% end %> 
                      </div>
                        <div class="panel-body">
                         <%= obstacle.obstacle_content %> 
                        </div>
                          <% if obstacle.image.url != "/images/original/missing.png" %>
                            <div class="content-image">
                              <%= image_tag obstacle.image.url, height: "150" %>
                            </div>
                          <% end %>
                    </div>
                  </div>
                </p> 
              </div>
            <% end %>
          </div>
          <br>
          <br>
        </div>
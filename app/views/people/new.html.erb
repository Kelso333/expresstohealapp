
<h1 class="sign-up">Sign Up</h1>

<%= form_for @peep do |f| %>
  <% if @peep.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
        <ul>
          <% for message in @peep.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div> 
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <p>Upload Image</p>
    <%= f.file_field :image %>
  </div>
  
  <br>
  <div class="actions">
    <%= f.submit 'Create Person',  :class=>"btn btn-default navbar-btn"  %>
  </div>

<% end %>



